// JavaScript Document

$(document).ready(function(){
	shareSet();
	lineSet();
	//lineHeight();
});

/* 线条精度 */
function lineSet(){
	if (window.devicePixelRatio && devicePixelRatio >= 2) {
	
	  var testElem = document.createElement('div');
	  testElem.style.border = '.5px solid transparent';
	  document.body.appendChild(testElem);
	  if (testElem.offsetHeight == 1){
		$(".flashList_title,nav.bottomNav,.flashList_title .titleBorder,.bottomShare .cancelShare").css({"border-width":".5px"});
		$(".willFlash_line").css({"width":".5px"});
	  }
	  document.body.removeChild(testElem);
	}
}

/* 分享按钮点击 */
function shareSet(){
	var winW = $(window).width();
	var winH = $(window).height();
	$(".mask").css({"width":winW,"height":winH});

	$(".topShare").on("tap",function(){
		$(".bottomShare").css({"bottom":"0"});
		$(".mask").css({"opacity":"1"}).show();
		
	});
	$(".cancelShare,.mask").on("tap",function(){
		$(".bottomShare").css({"bottom":"-100%"});
		$(".mask").css({"opacity":"0"}).hide();
		
	});
}

/* 竖线条长度 */
function lineHeight(){
	var outH = $(".willFlash_con").height();
	$(".willFlash_line").css({"height":outH - 20});
}