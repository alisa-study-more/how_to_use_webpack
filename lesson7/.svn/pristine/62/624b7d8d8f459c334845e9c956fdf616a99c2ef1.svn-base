@charset "utf-8";
/* CSS Document */

.flashList{
	border-top: .2666rem solid #f7f7f7;
}
.flashList_title{
	padding:.54rem 0;
	text-align:center;
	margin:0 .32rem;
	border-bottom:1px solid #d7d7d7;
}
.flashList_title span{
	font-size:.32rem;
}
.flashList_title .titleBorder{
	border-top:1px solid #222;
	width:2.4rem;
	margin:.24rem auto;
}
.flashList_title p{
}
.flashList_title p em{
	color:#ed1946;
	font-size:.5rem;
	font-weight:bold;
	padding:0 .24rem;
}
.flashList .activityGeneral{
	border-bottom:0;
}

.willFlash{
	width:100%;
	overflow:hidden;
}
.willFlash_title{
	height:1.1rem;
	background-color:#f7f7f7;
	text-align:center;
}
.willFlash_title img{
	width:6.4rem;
	display:inline-block;
	padding-top:.4rem;
}
.willFlash_time{
	padding:0 .32rem;
	background-color:#000;
	border-radius:0 10px 10px 0;
	display:inline-block;
	color:#fff;
	line-height:.6rem;
	margin:.16rem 0;
}
.willFlash .activityGeneral{
	padding-top:0;
}
.willFlash .activityGeneral:last-child{
	border-bottom:0;
}
.willFlash_con{
	position:relative;
	overflow:hidden;
}
.willFlash_line{
	width:1px;
	height:100%;
	/*height:calc(100% - 20px);*/
	background-color:#000;
	position:absolute;
	left:.16rem;
	top:.16rem;
}