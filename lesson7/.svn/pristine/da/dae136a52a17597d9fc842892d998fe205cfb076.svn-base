@charset "utf-8";
/* CSS Document */

header .screening {
    position: absolute;
    top: 0;
    right: 0;
    width: 1.15rem;
    height: 1.15rem;
    line-height: 1.15rem;
    text-align: right;
    text-align: center;
    color: #801da1;
}

.helpList {
    padding: .3rem 0;
}
.helpList dl {
    background-color: #fff;
    padding: .3rem .28rem;
    border-bottom: 1px solid #d7d7d7;
	line-height:.56rem;
}
.helpList a:last-child dl{
	border-bottom:0px solid #fff;
}
.helpList dl dt {
    float: left;
    width: 90%;
	vertical-align:middle;
}
.helpList dl.head dt {
	line-height:2.1rem;
}
.helpList dl.head dd {
	line-height:2.1rem;
}
.helpList dl dt img{
	float:right;
	width:2.1rem;
	height:2.1rem;
}
.helpList dl dd {
    width: .5rem;
    float: right;
}
.icon-right:before {
    content: "\e617";
}
.helpList dl:after {
    content: " ";
    display: block;
    visibility: hidden;
    height: 0;
    clear: both;
}

/* 修改登录密码 */
.org-updataPwd {
    display: block;
    line-height: 1.4rem;
	background-color:#fff;
}
.org-updataPwd > div {
    border-top: .266667rem solid #f7f7f7;
	padding: 0 0.266667rem;
}
.org-updataPwd em {
    width: .42rem;
    height: .42rem;
    margin:0 0.26666667rem;
    display: inline-block;
    vertical-align: middle;
}
.org-updataPwd .org-oldPwd > em {
    background: url(../images/org_lockX.png) center no-repeat;
    background-size: 100%;
}
.org-updataPwd input {
    border: 0px;
    color: #222;
    padding-left: 0.2rem;
	padding:.36rem 0;
    width:86%;
}
.org-updataPwd .org-newPwd > em {
    background: url(../images/org_lockHook.png) center no-repeat;
    background-size: 100%;
}
.org-updataPwd .org-repeatNewPwd > em {
    background: url(../images/org_lockDot.png) center no-repeat;
    background-size: 100%;
}
.org-qdModify{
    color: #ffffff;
    font-size: 0.42666667rem;
    text-align: center;
    line-height: 1.06666667rem;
    background-color: #801da1;
    border-radius:6px;
    width: 80%;
    margin:1.2rem auto;
}

/* 绑定会员卡 */
.org-cardTitleBig > div {
    border-top: .266667rem solid #f7f7f7;
    padding: 0 0.266667rem;
}
.org-cardTitleBig em {
    width: .42rem;
    height: .42rem;
    margin:0 0.26666667rem;
    display: inline-block;
    vertical-align: middle;
}
.org-cardTitleBig input {
    border: 0px;
    color: #222;
    padding-left: 0.2rem;
    padding: .36rem 0;
    width: 86%;
}
.org-cardTitleBig {
    line-height: 1.4rem;
    background-color: #fff;
}
.org-cardTitleBig .org-idCardNumber {
    border-bottom: 1px solid #f5f5f5;
}
.org-inputCode span {
    background-color: #f5f5f5;
    padding: 0 0.26666667rem;
    float: right;
    margin:0.16rem 0.266667rem 0.16rem 0;
	display:inline-block;
	height:1rem;
	line-height:1rem;
}
.org-cardTitleBig .org-idCardNumber > em {
    background: url(../images/org_membership.png) center no-repeat;
    background-size: 100%;
}
.org-cardTitleBig .org-cardReBindTel > em {
    background: url(../images/org_mobile.png) center no-repeat;
    background-size: 100%;
}
.org-cardTitleBig .org-inputCode > em {
    background: url(../images/ord_yanzheng.png) center no-repeat;
    background-size: 100%;
}
.org-cardTitleBig .org-inputCode input{
	width:50%;
}

/* 基本信息 */
.basicInfo{
	background-color: #fff;
}
.basicInfo > div {
    border-top: .266667rem solid #f7f7f7;
    padding: 0 0.266667rem;
	line-height: 1.4rem;
}
.basicInfo > p{
	line-height:.45rem;
	color:#f03863;
	font-size:.27rem;
	background-color:#f7f7f7;
	padding:.12rem .32rem .12rem 1.56667rem;
}
.basicInfo > div em {
    vertical-align: middle;
	display:inline-block;
	margin-right:.2rem;
	width:1rem;
}
.basicInfo > div input {
    border: 0px;
    color: #222;
    padding-left: 0.2rem;
    padding: .32rem 0;
    width: 82%;
}
.basicInfo > div select {
    color:#b6b6b6;
	padding:.32rem .12rem .32rem 0;
}
.basicInfo > div span{
	padding-right:.18rem;
}
.basicInfo > div.sex select {
	width:50%;
}