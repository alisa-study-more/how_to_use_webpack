// JavaScript Document

$(document).ready(function(){
	lineSet();
	inputFoucs();
	showOff();
	qrShow();
});

/* 扫码分享 */
function qrShow(){
	var winW = $(window).width();
	var winH = $(window).height();
	$(".qrShow").css({"width":winW,"height":winH});
	$(".user_qr").on("tap",function(){
		$(".qrShow").show();
	});
	$(".qrShow .con .head .close").on("tap",function(){
		$(".qrShow").hide();
	});
}

/* 线条精度 */
function lineSet(){
	if (window.devicePixelRatio && devicePixelRatio >= 2) {
	
	  var testElem = document.createElement('div');
	  testElem.style.border = '.5px solid transparent';
	  document.body.appendChild(testElem);
	  if (testElem.offsetHeight == 1){
		$(".org-cardTitleBig > div,.helpList dl,.platList a img,.bottomNav").css({"border-width":".5px"});
	  }
	  document.body.removeChild(testElem);
	}
}

/* input获取焦点，底部边框颜色变化--------删除按钮重置手机号码input框 */
function inputFoucs(){
	$(".org-cardTitleBig input").focus(function(){
		$(".org-cardTitleBig > div").removeClass("foucs");
		$(this).parent().addClass("foucs");
		if($(this).val() != ""){
			$(this).next(".reset").show();
		}
	})
	$(".org-cardTitleBig input").blur(function(){
		$(".org-cardTitleBig > div").removeClass("foucs");
		$(this).next(".reset").hide();
	});
	$(".org-cardTitleBig .reset").on("tap",function(){
		$(this).prev().val("");
		$(this).hide();
	});
}

/* 搜索框内容输入 */
function OnInput (obj) {
	var st = obj.value;
	var oobjec = obj.parentNode.getElementsByTagName('div')[0];
	if(st == ""){
		oobjec.style.display = "none";
	}else{
		oobjec.style.display = "block";
	}
}

//只显示原图滑块按钮
function showOff(){
	$(".setup .helpList dl dd").on('tap swiper', function(){
		if($(this).find(".flexBtn").length > 0){
			if($(this).hasClass("onShow")){		//显示开
				$(this).removeClass("onShow");
			}else{  							//显示关
				$(this).addClass("onShow");
			}
		}
	});
}

$(document).ready(function(e) {
    code_reSend();
});


function code_reSend(){
	$(".org-inputCode span").on('tap', function(){
		$(this).text("重新获取(60s)").addClass("reSend");;
	})
}