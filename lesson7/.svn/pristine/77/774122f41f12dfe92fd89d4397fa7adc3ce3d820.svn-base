@charset "utf-8";
/* CSS Document */

/* 弹出层 */
.pop{
	position:fixed;
	left:0;
	top:0;
	display:none;
}
.pop .pop_mask{
	background-color:rgba(0,0,0,.7);
	position:absolute;
	left:0;
	top:0;
	z-index:1;
}
.pop .con{
	width:5.48rem;
	position:absolute;
	z-index:2;
	top:20%;
	left:50%;
	margin-left:-2.74rem;
	display:none;
}
.pop .con_title{
	height:.96rem;
	line-height:.96rem;
	background-color:#801da1;
	color:#fff;
	text-align:center;
	font-size:.46rem;
	border-radius:5px 5px 0 0;
}
.pop .con_title i{
	display:inline-block;
	width:.48rem;
	height:.48rem;
	background:url(../images/pop_icon.png) no-repeat;
	background-size:100%;
	vertical-align:top;
	position:relative;
	top:.2rem;
	margin-right:.24rem;
}
.pop_detail{
	padding:1rem .72rem;
	text-align:center;
	font-size:.4rem;
	background-color:#fff;
}
.pop_btn{
	height:.9rem;
	line-height:.9rem;
	border-top:1px solid #7b2c95;
	background-color:#fff;
	border-radius:0 0 5px 5px;
	    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 100%;
}
.pop_btn a{
	font-size:.4rem;
	text-align:center;
	display:block;
	-webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
}
.pop_btn .double_btn:nth-child(2){
	border-left:1px solid #7b2c95;
	background-color:#d5c0dc;
}

/* 提示层 */
.tips{
	position:absolute;
	top:20%;
}
.tips em{
	display:none;
	background-color:rgba(0,0,0,.7);
	font-size:.4rem;
	color:#fff;
	border-radius:5px;
	padding:.48rem 1.04rem;
	text-align:center;
	margin:0 auto;
}


@-webkit-keyframes tip_in {
0%{
	opacity:0;
	transform:translateY(-100px);
}
100%{
	opacity:0;
	transform:translateY(0);
}
}
@keyframes tip_in {
0%{
	opacity:0;
	transform:translateY(-100px);
}
100%{
	opacity:1;
	transform:translateY(0);
}
}
.tip_in {
	animation-duration:.5s;
	-webkit-animation-name: tip_in;
	animation-name: tip_in;
}
