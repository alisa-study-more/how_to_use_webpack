@charset "utf-8";
/* CSS Document */

#box{
	width:100%;
	overflow-x:hidden;
}
#page-content{
	-webkit-transition:all ease 0.2s;
	transition":all ease 0.2s;
	height:auto;
	width:100%;
}
#page-content > div{
	padding-bottom:1.38rem;
}
.modular {
    width: 100%;
	position:absolute;
}
.title span{
	font-size:.4rem;
}

/* m-entry */
.m-entry {
  padding:.44rem .5rem;
  overflow: hidden;
  border-bottom:.2666rem solid #f7f7f7;
  
}
.m-entry span {
  float: left;
  width: 25%;
  font-size: .266667rem;
  text-align: center;
  line-height: 1;
}
.m-entry span:before {
  content: "";
  display: block;
  width: 40px;
  height: 40px;
  margin: 0 auto;
  background: url(../images/enter-ico.png) no-repeat;
  background-size: 100%;
  margin-bottom:.373rem;
}
.m-entry span:nth-child(2):before {
	background-position:0 -60px;
	background-size: 100%;
}
.m-entry span:nth-child(3):before {
	background-position:0 -120px;
	background-size: 100%;
}
.m-entry span:nth-child(4):before {
	background-position:0 -180px;
	background-size: 100%;
}

/* flashBuy */
.flashBuy{
	padding:.266rem .32rem 0;
	border-bottom:.2666rem solid #f7f7f7;
}
.flashBuy .title{
	line-height:1rem;
	padding-bottom:.1rem;
}
.flashBuy .title span i{
	width:.3rem;
	height:.3rem;
	display:inline-block;
	background-color:#d9b766;
	margin:0 .2rem;
}
.flashBuy .title a{
	float:right;
	line-height:1rem;
}
.flashBuy .title a i {
    width: .4rem;
    height: .4rem;
    display: inline-block;
    margin: 0 0 0 .1rem;
    vertical-align: top;
    padding-top: .29rem;
}
.flashBuy .title a img {
    width: .4rem;
    height: .4rem;
    display: block;
    vertical-align: top;
}
.flashBuy > a{
	width:100%;
	position:relative;
	display:block;
	margin-bottom:.266rem;
}
.flashBuy > a > img{
	width:100%;
}
.flashBuy > a .right{	
	width:4.9rem;
	position:absolute;
	z-index:0;
	right:.24rem;
	top:.75rem;
}
.flashBuy .right p{
	font-size:.24rem;
	letter-spacing:-0.01rem;
}
.flashBuy .right p em{
	margin-left:.1rem;
}
.flashBuy .right p em i{
	color:#ed1946;
}
.flashBuy .right .flashDot{
	width:100%;
	height:.04rem;
	background-image:url(../images/flashDot.png);
	background-size:100%;
	margin:.2rem 0 .5rem;
}
.flashBuy .right span.name{
	font-size:.32rem;
	height:1rem;
	line-height:.5rem;
	overflow:hidden;
	display:block;
}
.flashBuy .right span.country{
	display:block;
	margin:.133333rem 0 .4rem;
	line-height:.54rem;
}
.flashBuy .right span i{
	width: .46rem;
	height: .46rem;
	display: inline-block;
	margin-right: .2rem;
	vertical-align: top;
}
.flashBuy .right span img{
	width: .46rem;
	height: .46rem;
	display: inline-block;
	margin-right: .2rem;
	vertical-align: top;
}
.flashBuy .right .nowPrice{
	float:left;
	color:#ed1946;
	font-size:.48rem;
	line-height:.6rem;
	display:block;
	font-weight:bold;
}
.flashBuy .right .oldPrice{
	text-decoration: line-through;
	float:right;
	color:#999;
	display:inline-block;
	line-height:.6rem;
	font-size:.32rem;
}
.flashBuy .soldOut{
	width:1.813rem;
	height:1.813rem;
	background-image:url(../images/ico_soldOut.png);
	background-size:100%;
	position:absolute;
	left:1rem;
	top:2rem;
}
.flashBuy .right .nowPrice:first-letter{
	font-size:.32rem;
	font-weight:normal;
	padding-right:.06rem;
}

/* indexSingle */
.indexSingle{
	padding:.266rem .32rem 0;
	border-bottom:.2666rem solid #f7f7f7;
}
.indexSingle .title{
	line-height:1rem;
	padding-bottom:.1rem;
}
.indexSingle .title span i{
	width:.3rem;
	height:.3rem;
	display:inline-block;
	background-color:#d9b766;
	margin:0 .2rem;
}
.indexSingle a{
	width:100%;
	display:block;
	padding:.266rem 0;
}
.indexSingle a:nth-child(2){
	padding-top:0;
	border-bottom:1px solid #d7d7d7;
}
.indexSingle a > img{
	width:100%;
}
.indexSingle a span.name{
	font-size:.4rem;
	padding-top:.266666rem;
	display:block;
	float:none;
}
.indexSingle a p{
	font-size:.32rem;
	color:#666;
	margin:.2rem 0 0;
}
.indexSingle a span.country{
	color:#333;
	display:block;
	float:left;
	padding-top: .2rem;
	line-height:.46rem;
}
.indexSingle > a span i{
	width:.46rem;
	height:.46rem;
	display:inline-block;
	margin-right:.2rem;
	vertical-align:top;
}
.indexSingle span img{
	width:.46rem;
	height:.46rem;
	display:block;
}
.indexSingle span.singlePrice{
	float:right;
	padding-top:.2rem;
}
.indexSingle span.singlePrice .nowPrice{
	display:inline-block;
	color:#ed1946;
	font-size:.48rem;
	line-height:.6rem;
	float:none;
}
.indexSingle span.singlePrice .oldPrice{
	display:inline-block;
	color:#999;
	text-decoration: line-through;
	padding-left:.4rem;
	line-height:.6rem;
	float:none;
	font-size:.32rem;
}

.indexSingle span.singlePrice .nowPrice:first-letter{
	font-size:.4rem;
	padding-right:.06rem;
}