@charset "utf-8";
/* CSS Document */

body,html{height: 100%;} 
body{
	background-color:#1a1a1a;
}
.box{
	height:100%;
}

header .delBtn {
    position: absolute;
    top: 0;
    right: 0;
    width: 1.15rem;
    height: 1.15rem;
    text-align: right;
}
header .delBtn i {
    width: .48rem;
    height: .48rem;
    display: inline-block;
    background: url(../images/cart_del.png) no-repeat;
    background-size: 100%;
    margin: .32rem .32rem 0 0;
}
.delPic{
	top: 50%;
	display: table-cell;
	vertical-align: middle;
	position: static;
	width:100%;
	padding-top:14%;
}
.delPic img{
	width:100%;
}
.uploadText{
	background-color:#262626;
	color:#fff;
	position:fixed;
	bottom:0;
	left:0;
	height:1.18rem;
	line-height:1.18rem;
	width:100%;
	text-align:center;
}